<pre id="console"></pre>

<script>
window.onload = function() {

    var blueCircle;
var redCircle;
var RADIUS = 25;
var DX_RED = 6;
var DX_BLUE = 4;
var DELAY = 40;

function start(){
blueCircle = new Circle(25);
blueCircle.setPosition(50, getHeight()/ 2);
blueCircle.setColor(Color.blue);
add(blueCircle);

redCircle = new Circle(25);
redCircle.setPosition(getWidth()/2, getHeight()/2);
redCircle.setColor(Color.red);
add(redCircle);

mouseClickMethod(timer);

}

function timer(){
    setTimer(move, 50);
}

function move(){
    blueCircle.move(DX_BLUE, 0);
    
    if(blueCircle.getX() + blueCircle.getRadius() > redCircle.getX() - redCircle.getRadius()){
    stopTimer(move);
    setTimer(redMove, 50);
    }
}

function redMove(){
    redCircle.move(DX_RED, 0);
}


    if (typeof start === 'function') {
        start();
    }
};
</script>

